<!DOCTYPE html>
<html lang="en">

<%- include('layouts/header'); -%>

<body>

<%- include('layouts/navbar'); -%>

<header class="masthead" style="background-color: #6c757d;">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <div class="page-heading">
          <h1>Edit Post</h1>
        </div>
      </div>
    </div>
  </div>
</header>

<main class="container my-5">
  <div class="row">
    <div class="col-lg-8 col-md-10 mx-auto">
      <form action="/posts/update/<%= post._id %>" method="POST" enctype="multipart/form-data">
        <div class="form-group">
          <label for="title">Title</label>
          <input type="text" name="title" class="form-control" value="<%= post.title %>" required>
        </div>
        <div class="form-group mt-3">
          <label for="body">Content</label>
          <textarea name="body" class="form-control" rows="8" required><%= post.body %></textarea>
        </div>
        <div class="form-group mt-3">
          <label for="image">Replace Image (optional)</label>
          <input type="file" name="image" class="form-control">
        </div>
        <div class="mt-4">
          <button type="submit" class="btn btn-success">Update Post</button>
          <a href="/post/<%= post._id %>" class="btn btn-secondary">Cancel</a>
        </div>
      </form>
    </div>
  </div>
</main>

<%- include('layouts/footer'); -%>
<%- include('layouts/scripts'); -%>

</body>
</html>
